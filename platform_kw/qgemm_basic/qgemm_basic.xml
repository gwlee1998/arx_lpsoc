	</parameter>
	<parameter>
		<id>SIZE_OF_MEMORYMAP</id>
		<value>32kB</value>
	</parameter>
    </ip_instance>

    <clock_info>
			<define>
				<name>clk_system</name>
				<value type="dec">100000000</value>
			</define>
			<define>
				<name>clk_dca_core</name>
				<value type="dec">100000000</value>
			</define>
    </clock_info>

    <sim_define>
      <record_top>"depth=20",i_platform.i_rtl.i_dca_matrix_qgemm</record_top>
